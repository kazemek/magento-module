<layout version="0.1.0">
    <ratepayelv_adminhtml_logs_index>
        <reference name="content">
            <block type="ratepayelv/adminhtml_logs" name="adminhtml_logs.grid.container" />
        </reference>
    </ratepayelv_adminhtml_logs_index>
    
    <ratepayelv_adminhtml_logs_grid>
        <update handle="formkey"/>
        <block type="ratepayelv/adminhtml_logs_grid" name="adminhtml_logs.grid" output="toHtml"></block>
    </ratepayelv_adminhtml_logs_grid>
    
    <ratepayelv_adminhtml_bulk_grid>
        <update handle="formkey"/>
        <block type="ratepayelv/adminhtml_bulk_grid" name="adminhtml_bulk.grid" output="toHtml"></block>
    </ratepayelv_adminhtml_bulk_grid>
    
    <ratepayelv_adminhtml_bulk_index>
        <reference name="content">
            <block type="ratepayelv/adminhtml_bulk" name="adminhtml_bulk.grid.container" />
        </reference>
    </ratepayelv_adminhtml_bulk_index>
    
    <adminhtml_sales_order_view>
        <reference name="sales_order_tabs">                        
            <action method="addTab">
                <name>order_log_ratepayelv</name>
                <block>ratepayelv/adminhtml_log</block>	            
            </action>       
        </reference>           
    </adminhtml_sales_order_view>
   
</layout>
